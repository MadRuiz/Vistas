
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="login container-fluid" style="overflow: hidden;">
        <div class="row">
            <div class="login_fondo col">
                
            </div>
            <div class="login_formulario col-4 row justify-content-center align-items-center">
                <form action="/" method="post" class="">
                    <div>
                        <hr />
                        <h1>Iniciar sesión</h1>
                        <hr />
                    </div>
                    <br />
                    <div class="">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 col-form-label">Usuario:</label>
                            <input type="text" class="form-control" id="login_usuario" placeholder="Nombre de usuario" name="login_usuario">
                        </div>
                        <div class="form-group ">
                            <label for="login_clave" class="col-sm-2 col-form-label">Contraseña:</label>
                            <input type="password" class="form-control" id="login_clave" placeholder="******" name="login_clave">
                        </div>
                        <div class="form-group ">
                            <input type="submit" id="app_button" class="btn btn-default btn-outline-dark btn-block" value="Ingresar">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
</body>
</html>

